@page "{id:int}"
@model EavWebApp.Pages.Fields.DeleteModel
@{
    ViewData["Title"] = "Удалить поле";
}

<h1>Удалить поле</h1>

<p>Вы уверены, что хотите удалить поле <strong>@Model.Field.Name</strong>?</p>

<form method="post">
    <input type="hidden" asp-for="Field.Id" />
    <button type="submit" class="btn btn-danger">Удалить</button>
    <a asp-page="Index" class="btn btn-secondary">Отмена</a>
</form>

@page
@model EavWebApp.Pages.Fields.IndexModel
@{
    ViewData["Title"] = "Поля";
}

<h1>Список полей</h1>

<p>
    <a asp-page="Create" class="btn btn-primary">Создать поле</a>
</p>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Название</th>
            <th>Тип поля</th>
            <th>Таблица</th>
            <th>Действия</th>
        </tr>
    </thead>
    <tbody>
        @if (Model.Fields != null && Model.Fields.Any())
        {
            @foreach (var field in Model.Fields)
            {
                <tr>
                    <td>@field.Name</td>
                    <td>@field.FieldType</td>
                    <td>@field.Table?.Name</td>
                    <td>
                        <a asp-page="Edit" asp-route-id="@field.Id">Редактировать</a> |
                        <a asp-page="Delete" asp-route-id="@field.Id">Удалить</a>
                    </td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="4">Поля отсутствуют</td>
            </tr>
        }
    </tbody>
</table>

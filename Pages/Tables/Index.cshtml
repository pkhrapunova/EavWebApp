@page
@model EavWebApp.Pages.Tables.IndexModel

@{
    ViewData["Title"] = "Список таблиц";
}

<h1>@ViewData["Title"]</h1>

<p>
    <a asp-page="Create" class="btn btn-primary">Создать таблицу</a>
</p>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Название</th>
            <th>Действия</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var table in Model.Tables)
        {
            <tr>
                <td>@table.Name</td>
                <td>
                    <a asp-page="Edit" asp-route-id="@table.Id">Редактировать</a> |
                    <a asp-page="Delete" asp-route-id="@table.Id">Удалить</a>
                </td>
            </tr>
        }
    </tbody>
</table>

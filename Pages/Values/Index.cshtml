@page
@model EavWebApp.Pages.Values.IndexModel
@{
    ViewData["Title"] = "Значения";
}

<h1>Список значений</h1>

<p>
    <a asp-page="Create" class="btn btn-primary">Создать значение</a>
</p>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Значение</th>
            <th>Поле</th>
            <th>Таблица</th>
            <th>Object ID</th>
            <th>Действия</th>
        </tr>
    </thead>
    <tbody>
        @if (Model.Values != null && Model.Values.Any())
        {
            @foreach (var val in Model.Values)
            {
                <tr>
                    <td>@val.Val</td>
                    <td>@val.Field?.Name</td>
                    <td>@val.Table?.Name</td>
                    <td>@val.ObjectId</td>
                    <td>
                        <a asp-page="Edit" asp-route-id="@val.Id">Редактировать</a> |
                        <a asp-page="Delete" asp-route-id="@val.Id">Удалить</a>
                    </td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="5">Значений нет</td>
            </tr>
        }
    </tbody>
</table>

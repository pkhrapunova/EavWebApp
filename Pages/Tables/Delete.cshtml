@page "{id:int}"
@model EavWebApp.Pages.Tables.DeleteModel

<h1>Удалить таблицу</h1>

<p>Вы уверены, что хотите удалить таблицу <strong>@Model.Table.Name</strong>?</p>

<form method="post">
    <input type="hidden" asp-for="Table.Id" />
    <button type="submit" class="btn btn-danger">Удалить</button>
    <a asp-page="Index" class="btn btn-secondary">Отмена</a>
</form>
